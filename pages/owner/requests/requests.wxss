/* pages/owner/requests/requests.wxss */
.container {
  min-height: 100vh;
  background: #f5f5f5;
  padding: 40rpx;
}

.header {
  margin-bottom: 40rpx;
}

.title {
  font-size: 40rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 10rpx;
}

.subtitle {
  font-size: 24rpx;
  color: #999;
}

.tabs {
  display: flex;
  background: #fff;
  border-radius: 20rpx;
  padding: 10rpx;
  margin-bottom: 30rpx;
}

.tab-item {
  flex: 1;
  text-align: center;
  padding: 20rpx;
  font-size: 28rpx;
  color: #666;
  border-radius: 10rpx;
  transition: all 0.3s;
}

.tab-item.active {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: #fff;
  font-weight: 500;
}

.requests-list {
  background: #fff;
  border-radius: 20rpx;
  padding: 30rpx;
}

.request-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 30rpx 0;
  border-bottom: 1rpx solid #f0f0f0;
}

.request-item:last-child {
  border-bottom: none;
}

.request-info {
  flex: 1;
}

.guest-name {
  font-size: 32rpx;
  font-weight: 500;
  color: #333;
  margin-bottom: 15rpx;
}

.request-time {
  font-size: 28rpx;
  color: #666;
  margin-bottom: 10rpx;
}

.request-note {
  font-size: 24rpx;
  color: #999;
}

.request-actions {
  display: flex;
  gap: 20rpx;
}

.btn-approve {
  background: #2ed573;
  color: #fff;
  border-radius: 10rpx;
}

.btn-reject {
  background: #ff4757;
  color: #fff;
  border-radius: 10rpx;
}

.request-status {
  display: flex;
  align-items: center;
}

.status-text {
  font-size: 28rpx;
  padding: 10rpx 20rpx;
  border-radius: 10rpx;
}

.status-text.approved {
  background: #d4edda;
  color: #155724;
}

.status-text.rejected {
  background: #f8d7da;
  color: #721c24;
}

.empty {
  text-align: center;
  color: #999;
  padding: 60rpx 0;
  font-size: 28rpx;
}

