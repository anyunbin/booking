<!--pages/owner/index/index.wxml-->
<view class="container">
  <view class="header">
    <view class="title">主人端</view>
    <view class="subtitle">管理您的日程和预约</view>
  </view>

  <view class="menu-list">
    <view class="menu-item" bindtap="goToTimeSlots">
      <view class="menu-icon">⏰</view>
      <view class="menu-content">
        <view class="menu-title">时间单元设置</view>
        <view class="menu-desc">设置每日可预约时间段</view>
      </view>
      <view class="menu-arrow">></view>
    </view>

    <view class="menu-item" bindtap="goToSchedule">
      <view class="menu-icon">📅</view>
      <view class="menu-content">
        <view class="menu-title">日程管理</view>
        <view class="menu-desc">查看和管理您的日程安排</view>
      </view>
      <view class="menu-arrow">></view>
    </view>

    <view class="menu-item" bindtap="goToRequests">
      <view class="menu-icon">📋</view>
      <view class="menu-content">
        <view class="menu-title">预约请求</view>
        <view class="menu-desc">处理客人的预约申请</view>
      </view>
      <view class="menu-arrow">></view>
    </view>
  </view>
</view>

