/* pages/owner/schedule/schedule.wxss */
.container {
  min-height: 100vh;
  background: #f5f5f5;
  padding: 40rpx;
}

.header {
  margin-bottom: 40rpx;
}

.title {
  font-size: 40rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 10rpx;
}

.subtitle {
  font-size: 24rpx;
  color: #999;
}

.add-methods {
  display: flex;
  gap: 30rpx;
  margin-bottom: 40rpx;
}

.method-btn {
  flex: 1;
  height: 160rpx;
  border-radius: 20rpx;
  background: #fff;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.08);
  border: none;
  padding: 0;
}

.method-btn::after {
  border: none;
}

.method-icon {
  font-size: 50rpx;
  margin-bottom: 15rpx;
}

.method-text {
  font-size: 28rpx;
  color: #333;
}

.schedule-list {
  background: #fff;
  border-radius: 20rpx;
  padding: 30rpx;
}

.date-section {
  margin-bottom: 40rpx;
}

.date-section:last-child {
  margin-bottom: 0;
}

.date-header {
  font-size: 32rpx;
  font-weight: 500;
  color: #333;
  margin-bottom: 20rpx;
  padding-bottom: 15rpx;
  border-bottom: 2rpx solid #f0f0f0;
}

.schedule-items {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.schedule-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 25rpx;
  background: #f9f9f9;
  border-radius: 10rpx;
}

.schedule-info {
  flex: 1;
}

.schedule-time {
  font-size: 30rpx;
  color: #333;
  margin-bottom: 10rpx;
}

.schedule-status {
  font-size: 24rpx;
  color: #999;
}

.btn-delete {
  background: #ff4757;
  color: #fff;
  border-radius: 10rpx;
}

.empty {
  text-align: center;
  color: #999;
  padding: 60rpx 0;
  font-size: 28rpx;
}

.modal {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.5);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 1000;
}

.modal-content {
  width: 80%;
  max-width: 600rpx;
  background: #fff;
  border-radius: 20rpx;
  padding: 40rpx;
}

.modal-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 40rpx;
  text-align: center;
}

.form-group {
  margin-bottom: 30rpx;
}

.label {
  font-size: 28rpx;
  color: #666;
  margin-bottom: 20rpx;
}

.picker {
  padding: 20rpx;
  background: #f5f5f5;
  border-radius: 10rpx;
  color: #333;
  font-size: 28rpx;
}

.modal-buttons {
  display: flex;
  gap: 20rpx;
  margin-top: 40rpx;
}

.btn-cancel,
.btn-confirm {
  flex: 1;
  border-radius: 10rpx;
}

.btn-cancel {
  background: #f0f0f0;
  color: #666;
}

.btn-confirm {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: #fff;
}

