/* pages/friends/friends.wxss */
.container {
  min-height: 100vh;
  background: #f5f5f5;
  padding: 20rpx;
  display: flex;
  flex-direction: column;
}

.header {
  margin-bottom: 30rpx;
  padding: 0 20rpx;
}

.title {
  font-size: 40rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 10rpx;
}

.subtitle {
  font-size: 24rpx;
  color: #999;
}

/* 顶部统计提醒 */
.stats-reminder {
  display: flex;
  gap: 16rpx;
  margin-bottom: 24rpx;
  padding: 0 20rpx;
}

.reminder-item {
  flex: 1;
  padding: 20rpx;
  border-radius: 16rpx;
  text-align: center;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.08);
  transition: all 0.3s ease;
}

.reminder-item:active {
  transform: translateY(-2rpx);
  box-shadow: 0 6rpx 20rpx rgba(0, 0, 0, 0.12);
}

.reminder-item.approved {
  background: linear-gradient(135deg, #10b981 0%, #059669 100%);
  color: #fff;
}

.reminder-item.pending {
  background: linear-gradient(135deg, #f59e0b 0%, #d97706 100%);
  color: #fff;
}

.reminder-item.total {
  background: linear-gradient(135deg, #10b981 0%, #059669 100%);
  color: #fff;
}

.reminder-label {
  font-size: 22rpx;
  opacity: 0.9;
  margin-bottom: 8rpx;
  font-weight: 500;
}

.reminder-count {
  font-size: 44rpx;
  font-weight: bold;
  line-height: 1;
}

/* 顶部预约详情信息 */
.booking-details {
  background: #fff;
  border-radius: 20rpx;
  padding: 30rpx 50rpx;
  margin: 0 20rpx 20rpx 20rpx;
  box-shadow: 0 2px 8px rgba(0, 0, 0, 0.08);
}

.booking-section {
  margin-bottom: 20rpx;
}

.booking-section:last-child {
  margin-bottom: 0;
}

.section-title {
  font-size: 28rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 15rpx;
  padding-bottom: 10rpx;
  border-bottom: 2rpx solid #51cf66;
}

.section-title.pending {
  border-bottom-color: #ff6b6b;
}

.booking-item {
  padding: 18rpx 20rpx;
  background: #f9f9f9;
  border-radius: 12rpx;
  margin-bottom: 12rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  gap: 16rpx;
}

.booking-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 6rpx;
}

.booking-date {
  font-size: 28rpx;
  font-weight: 600;
  color: #222;
}

.booking-time {
  font-size: 24rpx;
  color: #666;
}

.booking-owner-badge {
  padding: 10rpx 16rpx;
  background: linear-gradient(135deg, #51cf66 0%, #37b24d 100%);
  color: #fff;
  border-radius: 20rpx;
  font-size: 24rpx;
  font-weight: 600;
  white-space: nowrap;
  flex-shrink: 0;
}

.booking-owner-badge.pending {
  background: linear-gradient(135deg, #ff6b6b 0%, #fa5252 100%);
}

.no-booking {
  text-align: center;
  padding: 30rpx;
  color: #999;
}

.no-booking-text {
  font-size: 26rpx;
}

/* 信息冒泡 */
.info-bubbles {
  display: flex;
  gap: 15rpx;
  margin-bottom: 20rpx;
  padding: 0 20rpx;
}

.bubble {
  flex: 1;
  padding: 20rpx;
  border-radius: 15rpx;
  text-align: center;
  box-shadow: 0 2px 8px rgba(0, 0, 0, 0.08);
}

.bubble.available {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: #fff;
}

.bubble.my-booking {
  background: linear-gradient(135deg, #f093fb 0%, #f5576c 100%);
  color: #fff;
}

.bubble-label {
  font-size: 22rpx;
  opacity: 0.9;
  margin-bottom: 8rpx;
}

.bubble-value {
  font-size: 36rpx;
  font-weight: bold;
}

/* 好友列表部分 */
.friends-section {
  flex: 1;
  display: flex;
  flex-direction: column;
  margin-bottom: 20rpx;
}

.section-header {
  font-size: 28rpx;
  font-weight: 600;
  color: #333;
  padding: 0 20rpx;
  margin-bottom: 15rpx;
}

.friends-list {
  flex: 1;
  background: #fff;
  border-radius: 20rpx;
  padding: 20rpx 50rpx;
  box-shadow: 0 2px 8px rgba(0, 0, 0, 0.08);
  overflow-y: auto;
}

.btn-add-friend {
  width: calc(100% - 40rpx);
  background: linear-gradient(135deg, #10b981 0%, #059669 100%);
  color: #fff;
  border-radius: 20rpx;
  font-size: 32rpx;
  padding: 30rpx;
  margin: 0 20rpx 20rpx 20rpx;
  box-shadow: 0 4rpx 12rpx rgba(16, 185, 129, 0.2);
  transition: all 0.3s ease;
}

.btn-add-friend:active {
  background: linear-gradient(135deg, #047857 0%, #065f46 100%);
  box-shadow: 0 2rpx 8rpx rgba(16, 185, 129, 0.15);
  transform: translateY(2rpx);
}

.friend-item {
  display: flex;
  align-items: center;
  padding: 28rpx 0;
  border-bottom: 1rpx solid #f0f0f0;
  gap: 24rpx;
}

.friend-item:last-child {
  border-bottom: none;
}

.friend-avatar {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: #fff;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 32rpx;
  font-weight: bold;
  flex-shrink: 0;
  object-fit: cover;
}

.friend-info {
  flex: 1;
  min-width: 0;
  display: flex;
  flex-direction: column;
  justify-content: center;
}

.friend-name {
  font-size: 32rpx;
  font-weight: 600;
  color: #222;
  margin-bottom: 6rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.friend-id {
  font-size: 24rpx;
  color: #999;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

/* 好友统计信息 */
.friend-stats {
  display: flex;
  gap: 16rpx;
  flex-shrink: 0;
  align-items: center;
}

.stat-badge {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 12rpx 16rpx;
  border-radius: 12rpx;
  min-width: 70rpx;
  background: #f5f5f5;
}

.stat-badge.available {
  background: #e3f2fd;
}

.stat-badge.booked {
  background: #f3e5f5;
}

.stat-label {
  font-size: 20rpx;
  color: #666;
  margin-bottom: 6rpx;
  font-weight: 500;
}

.stat-badge.available .stat-label {
  color: #1976d2;
}

.stat-badge.booked .stat-label {
  color: #7b1fa2;
}

.stat-count {
  font-size: 28rpx;
  font-weight: bold;
  color: #333;
}

.stat-badge.available .stat-count {
  color: #1976d2;
}

.stat-badge.booked .stat-count {
  color: #7b1fa2;
}

.friend-arrow {
  font-size: 32rpx;
  color: #ddd;
  flex-shrink: 0;
  transition: all 0.3s ease;
}

.friend-item:active .friend-arrow {
  color: #667eea;
  transform: translateX(4rpx);
}

.empty {
  text-align: center;
  padding: 100rpx 40rpx;
}

.empty-icon {
  font-size: 100rpx;
  margin-bottom: 30rpx;
}

.empty-text {
  font-size: 32rpx;
  color: #333;
  margin-bottom: 15rpx;
}

.empty-desc {
  font-size: 24rpx;
  color: #999;
}

