/* pages/guest/schedule/schedule.wxss */
.container {
  min-height: 100vh;
  background: #f5f5f5;
  padding: 40rpx;
}

.header {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  padding: 60rpx 40rpx;
  border-radius: 20rpx;
  margin-bottom: 40rpx;
  color: #fff;
}

.owner-name {
  font-size: 40rpx;
  font-weight: bold;
  margin-bottom: 15rpx;
}

.subtitle {
  font-size: 24rpx;
  opacity: 0.9;
}

.schedule-list {
  background: #fff;
  border-radius: 20rpx;
  padding: 30rpx;
}

.date-section {
  margin-bottom: 40rpx;
}

.date-section:last-child {
  margin-bottom: 0;
}

.date-header {
  font-size: 32rpx;
  font-weight: 500;
  color: #333;
  margin-bottom: 20rpx;
  padding-bottom: 15rpx;
  border-bottom: 2rpx solid #f0f0f0;
}

.schedule-items {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.schedule-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 25rpx;
  background: #f9f9f9;
  border-radius: 10rpx;
  transition: all 0.3s;
}

.schedule-item:active {
  background: #f0f0f0;
}

.schedule-item.booked {
  opacity: 0.6;
  background: #f5f5f5;
}

.schedule-info {
  flex: 1;
}

.schedule-time {
  font-size: 30rpx;
  color: #333;
  margin-bottom: 10rpx;
  font-weight: 500;
}

.schedule-status {
  font-size: 24rpx;
  color: #999;
}

.schedule-action {
  padding: 10rpx 25rpx;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  border-radius: 10rpx;
}

.action-text {
  color: #fff;
  font-size: 26rpx;
}

.empty {
  text-align: center;
  color: #999;
  padding: 60rpx 0;
  font-size: 28rpx;
}

