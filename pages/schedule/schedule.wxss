/* pages/schedule/schedule.wxss */
.container {
  min-height: 100vh;
  background: #f5f5f5;
  padding: 40rpx;
}

.header {
  margin-bottom: 30rpx;
}

.tabs {
  display: flex;
  background: #fff;
  border-radius: 20rpx;
  padding: 10rpx;
  margin-bottom: 30rpx;
}

.tab-item {
  flex: 1;
  text-align: center;
  padding: 20rpx;
  font-size: 28rpx;
  color: #666;
  border-radius: 10rpx;
  transition: all 0.3s;
}

.tab-item.active {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: #fff;
  font-weight: 500;
}

.tab-content {
  min-height: 400rpx;
}

.tab-desc {
  background: #f0f7ff;
  border-left: 4rpx solid #667eea;
  padding: 20rpx;
  margin-bottom: 20rpx;
  border-radius: 10rpx;
  font-size: 24rpx;
  color: #666;
}

.title {
  font-size: 40rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 10rpx;
}

.subtitle {
  font-size: 24rpx;
  color: #999;
}

.add-methods {
  display: flex;
  gap: 30rpx;
  margin-bottom: 40rpx;
}

.method-btn {
  flex: 1;
  height: 160rpx;
  border-radius: 20rpx;
  background: #fff;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.08);
  border: none;
  padding: 0;
}

.method-btn::after {
  border: none;
}

.method-icon {
  font-size: 50rpx;
  margin-bottom: 15rpx;
}

.method-text {
  font-size: 28rpx;
  color: #333;
}

.schedule-list {
  background: #fff;
  border-radius: 20rpx;
  padding: 30rpx;
}

.date-section {
  margin-bottom: 40rpx;
}

.date-section:last-child {
  margin-bottom: 0;
}

.date-header {
  font-size: 32rpx;
  font-weight: 500;
  color: #333;
  margin-bottom: 20rpx;
  padding-bottom: 15rpx;
  border-bottom: 2rpx solid #f0f0f0;
}

.schedule-items {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.schedule-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 25rpx;
  background: #f9f9f9;
  border-radius: 10rpx;
}

.schedule-info {
  flex: 1;
}

.schedule-time {
  font-size: 30rpx;
  color: #333;
  margin-bottom: 10rpx;
  font-weight: 500;
}

.schedule-meta {
  display: flex;
  gap: 20rpx;
  align-items: center;
}

.schedule-status {
  font-size: 24rpx;
  color: #999;
}

.schedule-status.booked {
  color: #2ed573;
  font-weight: 500;
}

.schedule-status.pending {
  color: #ffa502;
  font-weight: 500;
}

.schedule-status.available {
  color: #999;
}

.schedule-public {
  font-size: 24rpx;
  padding: 5rpx 15rpx;
  border-radius: 8rpx;
  background: #f0f0f0;
  color: #666;
}

.schedule-public.public {
  background: #d4edda;
  color: #155724;
}

.schedule-public.private {
  background: #f8d7da;
  color: #721c24;
}

.btn-delete {
  background: #ff4757;
  color: #fff;
  border-radius: 10rpx;
}

.empty {
  text-align: center;
  color: #999;
  padding: 60rpx 0;
  font-size: 28rpx;
}

.modal {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.5);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 1000;
}

.modal-content {
  width: 80%;
  max-width: 600rpx;
  background: #fff;
  border-radius: 20rpx;
  padding: 40rpx;
}

.modal-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 40rpx;
  text-align: center;
}

.form-group {
  margin-bottom: 30rpx;
}

.label {
  font-size: 28rpx;
  color: #666;
  margin-bottom: 20rpx;
}

.picker {
  padding: 20rpx;
  background: #f5f5f5;
  border-radius: 10rpx;
  color: #333;
  font-size: 28rpx;
}

.switch-label {
  font-size: 24rpx;
  color: #666;
  margin-left: 15rpx;
}

.split-preview {
  margin-top: 20rpx;
  padding: 20rpx;
  background: #f9f9f9;
  border-radius: 10rpx;
}

.preview-title {
  font-size: 24rpx;
  color: #666;
  margin-bottom: 15rpx;
}

.preview-items {
  display: flex;
  flex-direction: column;
  gap: 10rpx;
}

.preview-item {
  font-size: 26rpx;
  color: #333;
  padding: 10rpx;
  background: #fff;
  border-radius: 5rpx;
}

.modal-buttons {
  display: flex;
  gap: 20rpx;
  margin-top: 40rpx;
}

.btn-cancel,
.btn-confirm {
  flex: 1;
  border-radius: 10rpx;
}

.btn-cancel {
  background: #f0f0f0;
  color: #666;
}

.btn-confirm {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: #fff;
}

/* 时间单元样式 */
.time-slots-list {
  background: #fff;
  border-radius: 20rpx;
  padding: 30rpx;
  margin-bottom: 30rpx;
}

.slot-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 30rpx 0;
  border-bottom: 1rpx solid #f0f0f0;
}

.slot-item:last-child {
  border-bottom: none;
}

.slot-time {
  font-size: 32rpx;
  color: #333;
  font-weight: 500;
}

.add-section {
  background: #fff;
  border-radius: 20rpx;
  padding: 40rpx;
}

.add-title {
  font-size: 32rpx;
  font-weight: 500;
  color: #333;
  margin-bottom: 30rpx;
}

.btn-add {
  width: 100%;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: #fff;
  border-radius: 10rpx;
  margin-top: 20rpx;
}

/* 预约状态管理样式 */
.request-tabs {
  display: flex;
  background: #fff;
  border-radius: 20rpx;
  padding: 10rpx;
  margin-bottom: 30rpx;
}

.request-tab-item {
  flex: 1;
  text-align: center;
  padding: 15rpx;
  font-size: 26rpx;
  color: #666;
  border-radius: 10rpx;
}

.request-tab-item.active {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: #fff;
  font-weight: 500;
}

.requests-list {
  background: #fff;
  border-radius: 20rpx;
  padding: 30rpx;
}

.request-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 30rpx 0;
  border-bottom: 1rpx solid #f0f0f0;
}

.request-item:last-child {
  border-bottom: none;
}

.request-info {
  flex: 1;
}

.request-guest {
  font-size: 32rpx;
  font-weight: 500;
  color: #333;
  margin-bottom: 15rpx;
}

.request-time {
  font-size: 28rpx;
  color: #666;
  margin-bottom: 10rpx;
}

.request-note {
  font-size: 24rpx;
  color: #999;
}

.request-actions {
  display: flex;
  gap: 20rpx;
}

.btn-approve {
  background: #2ed573;
  color: #fff;
  border-radius: 10rpx;
}

.btn-reject {
  background: #ff4757;
  color: #fff;
  border-radius: 10rpx;
}

.request-status {
  display: flex;
  align-items: center;
}

.status-text {
  font-size: 28rpx;
  padding: 10rpx 20rpx;
  border-radius: 10rpx;
}

.status-text.approved {
  background: #d4edda;
  color: #155724;
}

.status-text.rejected {
  background: #f8d7da;
  color: #721c24;
}

