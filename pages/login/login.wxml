<!--pages/login/login.wxml-->
<view class="login-container">
  <view class="login-header">
    <view class="logo">📅</view>
    <view class="title">我的预约</view>
    <view class="subtitle">管理日程，与好友分享</view>
  </view>

  <view class="login-content">
    <view class="login-description">
      <view class="desc-title">欢迎使用</view>
      <view class="desc-text">使用微信账号快速登录，无需注册</view>
    </view>

    <view class="login-button-group">
      <button
        class="wechat-login-button"
        bindtap="handleWechatLogin"
        loading="{{isSubmitting}}"
        disabled="{{isSubmitting}}"
      >
        <text class="wechat-icon">🔐</text>
        <text class="button-text">微信登录</text>
      </button>
    </view>

    <view class="login-tips">
      <view class="tips-title">登录说明</view>
      <view class="tips-item">✓ 首次登录会自动创建账户</view>
      <view class="tips-item">✓ 使用微信昵称作为用户名</view>
      <view class="tips-item">✓ 您的信息仅用于账户管理</view>
    </view>
  </view>
</view>

