/* pages/login/login.wxss */
.login-container {
  min-height: 100vh;
  background: linear-gradient(180deg, #667eea 0%, #764ba2 100%);
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 40rpx;
}

.login-header {
  text-align: center;
  color: #fff;
  margin-bottom: 60rpx;
}

.logo {
  font-size: 120rpx;
  margin-bottom: 30rpx;
}

.title {
  font-size: 56rpx;
  font-weight: bold;
  margin-bottom: 20rpx;
  letter-spacing: 2rpx;
}

.subtitle {
  font-size: 28rpx;
  opacity: 0.9;
  font-weight: 300;
}

.login-content {
  width: 100%;
  max-width: 600rpx;
  background: #fff;
  border-radius: 30rpx;
  padding: 50rpx 40rpx;
  box-shadow: 0 10rpx 40rpx rgba(0, 0, 0, 0.2);
}

.tab-bar {
  display: flex;
  margin-bottom: 50rpx;
  border-bottom: 2rpx solid #f0f0f0;
}

.tab-item {
  flex: 1;
  text-align: center;
  padding: 20rpx 0;
  font-size: 32rpx;
  color: #999;
  position: relative;
}

.tab-item.active {
  color: #667eea;
  font-weight: 600;
}

.tab-item.active::after {
  content: '';
  position: absolute;
  bottom: -2rpx;
  left: 0;
  right: 0;
  height: 4rpx;
  background: #667eea;
  border-radius: 2rpx 2rpx 0 0;
}

.form-container {
  width: 100%;
}

.form-group {
  display: flex;
  flex-direction: column;
  gap: 30rpx;
}

.input-wrapper {
  display: flex;
  align-items: center;
  background: #f5f5f5;
  border-radius: 15rpx;
  padding: 0 20rpx;
  min-height: 90rpx;
  position: relative;
}

.input-icon {
  font-size: 36rpx;
  margin-right: 20rpx;
  color: #999;
  flex-shrink: 0;
}

.input {
  flex: 1;
  font-size: 28rpx;
  color: #333;
  min-height: 90rpx;
  line-height: 90rpx;
}

/* 密码显示/隐藏切换按钮 */
.password-toggle {
  display: flex;
  align-items: center;
  justify-content: center;
  width: 60rpx;
  height: 60rpx;
  margin-left: 10rpx;
  cursor: pointer;
  flex-shrink: 0;
}

.toggle-icon {
  font-size: 32rpx;
  color: #999;
  transition: color 0.2s ease;
}

.password-toggle:active .toggle-icon {
  color: #667eea;
}

.submit-button {
  width: 100%;
  height: 90rpx;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: #fff;
  border-radius: 45rpx;
  font-size: 32rpx;
  font-weight: 500;
  margin-top: 20rpx;
  box-shadow: 0 6rpx 20rpx rgba(102, 126, 234, 0.3);
}

.submit-button::after {
  border: none;
}

