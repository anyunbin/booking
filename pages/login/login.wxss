/* pages/login/login.wxss */
.login-container {
  min-height: 100vh;
  background: linear-gradient(180deg, #667eea 0%, #764ba2 100%);
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 40rpx;
}

.login-header {
  text-align: center;
  color: #fff;
  margin-bottom: 80rpx;
}

.logo {
  font-size: 120rpx;
  margin-bottom: 30rpx;
  animation: bounce 2s infinite;
}

@keyframes bounce {
  0%, 100% {
    transform: translateY(0);
  }
  50% {
    transform: translateY(-20rpx);
  }
}

.title {
  font-size: 56rpx;
  font-weight: bold;
  margin-bottom: 20rpx;
  letter-spacing: 2rpx;
}

.subtitle {
  font-size: 28rpx;
  opacity: 0.9;
  font-weight: 300;
}

.login-content {
  width: 100%;
  max-width: 600rpx;
  background: #fff;
  border-radius: 30rpx;
  padding: 60rpx 40rpx;
  box-shadow: 0 10rpx 40rpx rgba(0, 0, 0, 0.2);
}

.login-description {
  text-align: center;
  margin-bottom: 50rpx;
}

.desc-title {
  font-size: 36rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 15rpx;
}

.desc-text {
  font-size: 28rpx;
  color: #999;
}

.login-button-group {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
  margin-bottom: 50rpx;
}

.wechat-login-button {
  width: 100%;
  height: 100rpx;
  background: linear-gradient(135deg, #09b981 0%, #059669 100%);
  color: #fff;
  border-radius: 50rpx;
  font-size: 32rpx;
  font-weight: 600;
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 15rpx;
  box-shadow: 0 6rpx 20rpx rgba(9, 185, 129, 0.3);
  transition: all 0.3s ease;
}

.wechat-login-button::after {
  border: none;
}

.wechat-login-button:active {
  transform: scale(0.98);
  box-shadow: 0 3rpx 10rpx rgba(9, 185, 129, 0.2);
}

.wechat-login-button[disabled] {
  opacity: 0.7;
}

.wechat-icon {
  font-size: 40rpx;
}

.button-text {
  font-size: 32rpx;
}

.login-tips {
  background: #f5f5f5;
  border-radius: 15rpx;
  padding: 30rpx;
}

.tips-title {
  font-size: 28rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 20rpx;
}

.tips-item {
  font-size: 26rpx;
  color: #666;
  line-height: 40rpx;
  margin-bottom: 12rpx;
}

.tips-item:last-child {
  margin-bottom: 0;
}

