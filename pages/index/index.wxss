/* pages/index/index.wxss */
.container {
  min-height: 100vh;
  background: linear-gradient(180deg, #f8f9ff 0%, #f5f5f5 100%);
  padding: 0;
}

.header-card {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  padding: 80rpx 40rpx 100rpx;
  border-radius: 0 0 40rpx 40rpx;
  margin-bottom: 60rpx;
  color: #fff;
  box-shadow: 0 8rpx 30rpx rgba(102, 126, 234, 0.3);
  position: relative;
  overflow: hidden;
}

.header-card::before {
  content: '';
  position: absolute;
  top: -50%;
  right: -20%;
  width: 300rpx;
  height: 300rpx;
  background: rgba(255, 255, 255, 0.1);
  border-radius: 50%;
  opacity: 0.5;
}

.header-card::after {
  content: '';
  position: absolute;
  bottom: -30%;
  left: -10%;
  width: 200rpx;
  height: 200rpx;
  background: rgba(255, 255, 255, 0.08);
  border-radius: 50%;
  opacity: 0.5;
}

.header-content {
  position: relative;
  z-index: 1;
}

.title {
  font-size: 56rpx;
  font-weight: bold;
  margin-bottom: 20rpx;
  letter-spacing: 2rpx;
}

.subtitle {
  font-size: 28rpx;
  opacity: 0.95;
  font-weight: 300;
  letter-spacing: 1rpx;
}

.menu-list {
  display: flex;
  flex-direction: column;
  gap: 24rpx;
  padding: 0 40rpx 40rpx;
}

.menu-item {
  background: #fff;
  border-radius: 24rpx;
  padding: 40rpx 32rpx;
  display: flex;
  align-items: center;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.06);
  transition: all 0.3s ease;
  position: relative;
  overflow: hidden;
}

.menu-item::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  width: 6rpx;
  height: 100%;
  background: linear-gradient(180deg, #667eea 0%, #764ba2 100%);
  opacity: 0;
  transition: opacity 0.3s ease;
}

.menu-item:active {
  transform: scale(0.98);
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.1);
}

.menu-item:active::before {
  opacity: 1;
}

.menu-icon-wrapper {
  width: 96rpx;
  height: 96rpx;
  border-radius: 20rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-right: 28rpx;
  position: relative;
  flex-shrink: 0;
}

.schedule-icon {
  background: linear-gradient(135deg, #e3f2fd 0%, #bbdefb 100%);
  padding: 16rpx;
  display: flex;
  flex-direction: row;
  align-items: flex-end;
  justify-content: space-around;
  gap: 8rpx;
}

.icon-bar {
  background: linear-gradient(180deg, #4caf50 0%, #2e7d32 100%);
  border-radius: 4rpx;
  width: 12rpx;
}

.bar-1 {
  height: 24rpx;
  background: linear-gradient(180deg, #4caf50 0%, #2e7d32 100%);
}

.bar-2 {
  height: 40rpx;
  background: linear-gradient(180deg, #2196f3 0%, #1565c0 100%);
}

.bar-3 {
  height: 32rpx;
  background: linear-gradient(180deg, #f44336 0%, #c62828 100%);
}

.friends-icon {
  background: linear-gradient(135deg, #e3f2fd 0%, #bbdefb 100%);
  padding: 12rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  gap: -8rpx;
}

.icon-person {
  width: 32rpx;
  height: 32rpx;
  background: linear-gradient(135deg, #42a5f5 0%, #1976d2 100%);
  border-radius: 50%;
  border: 3rpx solid #fff;
  position: relative;
}

.person-1 {
  margin-right: -12rpx;
  z-index: 2;
}

.person-2 {
  z-index: 1;
  opacity: 0.8;
}

.profile-icon {
  background: linear-gradient(135deg, #e3f2fd 0%, #bbdefb 100%);
  padding: 16rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.icon-text {
  font-size: 48rpx;
}

.menu-content {
  flex: 1;
}

.menu-title {
  font-size: 34rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 12rpx;
  letter-spacing: 0.5rpx;
}

.menu-desc {
  font-size: 24rpx;
  color: #666;
  line-height: 1.5;
}

.menu-arrow {
  font-size: 40rpx;
  color: #ccc;
  margin-left: 20rpx;
  font-weight: 300;
  flex-shrink: 0;
}
