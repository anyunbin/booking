<!--pages/index/index.wxml-->
<view class="container">
  <!-- 顶部装饰 -->
  <view class="top-decoration"></view>

  <view class="header-card">
    <view class="header-content">
      <view class="title">📅 我的预约</view>
      <view class="subtitle">管理日程，与好友分享</view>
    </view>
  </view>

  <view class="menu-list">
    <view class="menu-item schedule-item" bindtap="goToScheduleTable">
      <view class="menu-icon-wrapper schedule-icon">
        <view class="icon-bar bar-1"></view>
        <view class="icon-bar bar-2"></view>
        <view class="icon-bar bar-3"></view>
      </view>
      <view class="menu-content">
        <view class="menu-title">日程表格</view>
        <view class="menu-desc">统一管理日程、预约和审批</view>
      </view>
      <view class="menu-arrow">›</view>
    </view>

    <view class="menu-item friends-item" bindtap="goToFriends">
      <view class="menu-icon-wrapper friends-icon">
        <view class="icon-person person-1"></view>
        <view class="icon-person person-2"></view>
      </view>
      <view class="menu-content">
        <view class="menu-title">我的好友</view>
        <view class="menu-desc">查看好友列表和日程</view>
      </view>
      <view class="menu-arrow">›</view>
    </view>

    <view class="menu-item profile-item" bindtap="goToProfile">
      <view class="menu-icon-wrapper profile-icon">
        <view class="icon-avatar"></view>
      </view>
      <view class="menu-content">
        <view class="menu-title">个人中心</view>
        <view class="menu-desc">账号信息、密码修改</view>
      </view>
      <view class="menu-arrow">›</view>
    </view>
  </view>

  <!-- 底部装饰 -->
  <view class="bottom-decoration"></view>
</view>
